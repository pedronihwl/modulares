{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "..",
  "setupFiles": ["<rootDir>/test/setup.ts"],
  "moduleNameMapper": {
    "^@src/(.*)$": "<rootDir>/src/$1",
    "^db/(.*)$": "<rootDir>/db/$1"
  },
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  }
}
